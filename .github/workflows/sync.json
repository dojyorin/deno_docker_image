{
    "name": "sync",
    "on": {
        "schedule": [{
            "cron": "0 12 * * *"
        }]
    },
    "jobs": {
        "sync": {
            "name": "sync: origin version",
            "runs-on": "ubuntu-latest",
            "steps": [{
                "name": "clone repository",
                "uses": "actions/checkout@v3"
            }, {
                "name": "install deno",
                "uses": "denoland/setup-deno@v1"
            }, {
                "name": "compare version",
                "run": "deno run -A ./script/compare.ts"
            }, {
                "name": "push tag",
                "run": "git tag -a ${v_origin} -m 'sync latest denoland/deno' && git push origin ${v_origin}"
            }]
        }
    }
}