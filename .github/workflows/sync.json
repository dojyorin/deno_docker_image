{
    "name": "sync",
    "on": {
        "schedule": [{
            "cron": "0 12 * * *"
        }]
    },
    "jobs": {
        "sync": {
            "name": "sync: origin version",
            "runs-on": "ubuntu-latest",
            "steps": [{
                "name": "clone repository",
                "uses": "actions/checkout@v3"
            }, {
                "name": "install tools",
                "run": "sudo apt install -y curl yq"
            }, {
                "name": "compare version",
                "run": "./script/sync.sh"
            }]
        }
    }
}