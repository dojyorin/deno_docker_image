{
    "name": "sync",
    "on": {
        "schedule": [{
            "cron": "0 12 * * *"
        }]
    },
    "jobs": {
        "sync": {
            "name": "sync: origin version",
            "runs-on": "ubuntu-latest",
            "steps": [{
                "name": "clone repository",
                "uses": "actions/checkout@v3"
            }, {
                "run": "sudo apt install -y curl yq"
            }, {
                "run": "readonly v_current=$(curl -Ls ${{github.api_url}}/releases/latest | yq '.tag_name')"
            }, {
                "run": "readonly v_origin=$(curl -Ls https://api.github.com/repos/denoland/deno/releases/latest | yq '.tag_name')"
            }, {
                "run": "git tag -a v0.0.0 -m ''"
            }, {
                "run": "git push origin v0.0.0"
            }]
        }
    }
}