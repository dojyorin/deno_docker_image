{
    "name": "test",
    "on": {
        "push": {
            "branches-ignore": [
                "master"
            ],
            "paths-ignore": [
                ".git*",
                "**.md"
            ]
        },
        "pull_request": {
            "branches": [
                "master"
            ],
            "paths-ignore": [
                ".git*",
                "**.md"
            ]
        }
    },
    "jobs": {
        "test": {
            "name": "test: ${{matrix.file}}",
            "runs-on": "ubuntu-latest",
            "strategy": {
                "fail-fast": true,
                "matrix": {
                    "file": [
                        "alpine",
                        "distroless"
                    ]
                }
            },
            "steps": [{
                "name": "clone repository",
                "uses": "actions/checkout@v3"
            }]
        }
    }
}