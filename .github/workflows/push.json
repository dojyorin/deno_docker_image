{
    "name": "push",
    "on": {
        "schedule": [{
            "cron": "0 12 * * *"
        }]
    },
    "jobs": {
        "fetch": {
            "name": "fetch: deno latest version",
            "runs-on": "ubuntu-latest",
            "steps": [{
                "name": "set deno latest version to env",
                "run": "echo DENO_VERSION=$(curl -Ls https://api.github.com/repos/denoland/deno/releases/latest | yq '.tag_name') >> ${{github.env}}"
            }, {
                "name": "compare dockerhub tag and deno latest version",
                "run": "curl -Ls https://registry.hub.docker.com/v2/repositories/denoland/deno/tags?page_size=100 | yq '\"v\" + .results[].name' | grep -q ${{env.DENO_VERSION}}"
            }]
        },
        "build": {
            "name": "build: ${{matrix.distro}}",
            "runs-on": "ubuntu-latest",
            "needs": "fetch",
            "if": "${{failure()}}",
            "strategy": {
                "fail-fast": true,
                "matrix": {
                    "distro": [
                        "alpine",
                        "distroless"
                    ]
                }
            },
            "env": {
                "tag_f": "${{github.repository_owner}}/deno:${{matrix.distro}}-${{env.DENO_VERSION}}",
                "tag_d": "${{github.repository_owner}}/deno:${{matrix.distro}}",
                "tag_v": "${{github.repository_owner}}/deno:${{env.DENO_VERSION}}",
                "tag_l": "${{github.repository_owner}}/deno:latest"
            },
            "steps": [{
                "name": "clone repository",
                "uses": "actions/checkout@v3"
            }, {
                "name": "install docker-qemu",
                "uses": "docker/setup-qemu-action@v3"
            }, {
                "name": "login dockerhub",
                "uses": "docker/login-action@v3",
                "with": {
                    "username": "${{github.repository_owner}}",
                    "password": "${{secrets.DOCKERHUB_KEY}}"
                }
            }, {
                "name": "build image",
                "uses": "docker/build-push-action@v5",
                "with": {
                    "push": true,
                    "pull": true,
                    "no-cache": true,
                    "tags": "${{env.tag_f}},${{env.tag_d}}${{matrix.distro == 'distroless' && format(',{0},{1}', env.tag_v, env.tag_l) || ''}}",
                    "platforms": "linux/amd64",
                    "context": "{{defaultContext}}:./src",
                    "file": "${{matrix.distro}}.dockerfile",
                    "build-args": "DENO_VERSION=${{env.DENO_VERSION}}"
                }
            }]
        }
    }
}